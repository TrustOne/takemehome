<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/testlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="550dp"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/testlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="0.85"
            android:src="@drawable/asset_manager" />

        <TextView
            android:id="@+id/textView0001"
            android:layout_width="189dp"
            android:layout_height="match_parent"
            android:background="@drawable/textbox1"
            android:text="입력"
            android:textColor="#ffffff" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="#324323" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginTop="3dip"
        android:layout_weight="5" >

        <TextView
            android:id="@+id/asset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_weight="0.05"
            android:text="부채" />


        <ImageButton
            android:id="@+id/Imagebutton03"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_weight="0.05"
            android:onClick="onButtonClicked"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Imagebutton03"
            android:layout_weight="0.05"
            android:text="보물" />


        <EditText
            android:id="@+id/editbuche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="10" />


        <ImageButton
            android:id="@+id/Imagebutton02"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView02"
            android:layout_marginTop="32dp"
            android:onClick="onButtonClicked"
            android:src="@drawable/question" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/Imagebutton02"
            android:layout_weight="0.05"
            android:text="순자산" />


        <ImageButton
            android:id="@+id/Imagebutton01"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editbuche"
            android:onClick="onButtonClicked"
            android:src="@drawable/question" />

        <EditText
            android:id="@+id/editasset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Imagebutton02"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="10"
             />

        <EditText
            android:id="@+id/editbomul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editbuche"
            android:layout_below="@+id/Imagebutton03"
            android:layout_weight="1"
            android:ems="10" />
          
      
    </RelativeLayout>

</LinearLayout>