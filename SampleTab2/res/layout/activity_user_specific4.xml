<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="연봉"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvsalary"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etsalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnsalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="생활비"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvlivingcost"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etlivingcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnlivingcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="저축액"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvsaving"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etsaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnsaving"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />
        
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="교육비"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvschoolcost"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etschoolcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnschoolcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_medium" >

            <TextView
                android:id="@+id/textView9"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="개인대출 상환액"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvpersonalfinancing"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etpersonalfinancing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnpersonalfinancing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/textView11"
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:text="주택대출 상환액"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvmortgage"
                android:layout_width="70dip"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="원"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etmortgage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/btnmortgage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
